{
    "manifest_version": 3,
    "name": "ChatGPT Chatbot Extension",
    "version": "1.0",
    "description": "A Chrome extension with a ChatGPT chatbot.",
    "permissions": ["activeTab",
                    "tabs",
                    "contextMenus",
                    "storage"],
    "action": {
      "default_popup": "browserchatgpt.html",
      "default_icon": {
      }
    },
    "icons": {
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["browserchatgpt.js"]
      }
    ],
    "background": {
      "service_worker": "background.js"
    }
  }
  